{% extends 'base.html.twig' %}
{% block title %}
	recettes
{% endblock %}
{% block body %}
	<div
		class="js-filter">
		<!-- Breadcrumb Begin -->
		<div class="breadcrumb-option">
			<div class="container">
				<div class="row">
					<div class="col-lg-6 col-md-6 col-sm-6">
						<div class="breadcrumb__text">
							<h2>
								Recettes
							</h2>
						</div>
					</div>
					<div class="col-lg-6 col-md-6 col-sm-6">
						<div class="breadcrumb__links">
							<a href="{{ path('index') }}" class="text-decoration-none">
								Accueil
							</a>
							<span>
								Recettes
							</span>
						</div>
					</div>
				</div>
			</div>
		</div>


		<!-- Shop Section Begin -->
		<section class="shop spad">
			<div class="container">
				<div class="shop__option">
					<div class="row">
						<div class="col-lg-7 col-md-7">
							<div class="shop__option__search">

								{% include 'recipes/_filter.html.twig' with {form: form} only %}
							</div>
						</div>
					</div>
				</div>

				<div class="row js-filter-content">
					{% include "recipes/_recipes.html.twig" %}
				</div>
				<div class="shop__last__option">
					<div class="row">
						<div
							class="col-lg-6 col-md-6 col-sm-6 js-filter-pagination">
							{# <div class="shop__pagination"> #}
							{{ knp_pagination_render(recipes, 'pagination/_paginate.html.twig')}}
							{# </div> #}
						</div>
					</div>
				</div>
			</div>
		</section>
	</div>
{% endblock %}
