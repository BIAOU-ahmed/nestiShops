<div class=" bg-white ">
    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Montant</th>
            <th scope="col">Nb d'article</th>
            <th scope="col">Date</th>
        </tr>
        </thead>
        <tbody>
        {% for order in user.getOrders %}
            <tr>
                <th scope="row">{{ order.idOrders }}</th>
                <td>{{ order.getPrice |format_currency('EUR', locale='fr')   }}</td>
                <td>{{ order.orderLines |length }}</td>
                <td>
                    {{ order.dateCreation|format_datetime('short',locale='fr') }}</td>
            </tr>
        {% endfor %}

        </tbody>
    </table>
</div>