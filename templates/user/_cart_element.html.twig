
{% if values %}

<div class="row">
    {{ dump(total) }}
    <!--Grid column-->
    <div class="col-lg-8">

        <!-- Card -->
        <div class="card wish-list mb-3">
            <div class="card-body">

                <h5 class="mb-4">{{pluralize(values | length, 'Article')}} </h5>
                {% for article in values %}
                    <div class="row mb-4">
                        <div class="col-md-5 col-lg-3 col-xl-3">
                            <div class="view zoom overlay z-depth-1 rounded mb-3 mb-md-0">
                                <img class="img-fluid w-100"
                                     src="https://mdbootstrap.com/img/Photos/Horizontal/E-commerce/Vertical/12a.jpg"
                                     alt="Sample">

                            </div>
                        </div>
                        <div class="col-md-7 col-lg-9 col-xl-9">
                            <div>
                                <div class="d-flex justify-content-between">
                                    <div>
                                        <h5>{{ article.article.name }}</h5>
                                    </div>
                                    <div>

                                        <div class="input-group">
                                                <span class="input-group-btn">
                                                    <button type="button" class="btn articleDown btn-danger btn-number"
                                                            data-id="{{ article.article.idArticle }}" {{ article.nb == 1 ? 'disabled':'' }}>
                                                        <i class="fas fa-minus" data-id="{{ article.article.idArticle }}"></i>
                                                    </button>
                                                </span>
                                            <input type="text" name="quant[2]" class="form-control input-number"
                                                   value="{{ article.nb }}" min="1" max="100">
                                            <span class="input-group-btn">
                                                    <button type="button" class=" articleUp btn btn-success btn-number"
                                                            data-id="{{ article.article.idArticle }}">
                                                        <i class="fas fa-plus" data-id="{{ article.article.idArticle }}"></i>
                                                    </button>
                                                </span>
                                        </div>

                                    </div>

                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <a href="#!" type="button"
                                           class="card-link-secondary small text-uppercase mr-3"><i
                                                    class="fas fa-trash-alt mr-1"></i> Remove item </a>
                                    </div>
                                    <p class="mb-0"><span><strong>{{ article.article.getPrice | number_format(2, ',', ' ') }} €</strong></span></p>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
                <hr class="mb-4">
                <p class="text-primary mb-0"><i class="fas fa-info-circle mr-1"></i> Do not delay the purchase,
                    adding
                    items to your cart does not mean booking them.</p>

            </div>
        </div>
        <!-- Card -->

        <!-- Card -->
        <div class="card mb-3">
            <div class="card-body">

                <h5 class="mb-4">Expected shipping delivery</h5>

                <p class="mb-0"> Thu., 12.03. - Mon., 16.03.</p>
            </div>
        </div>

    </div>
    <!--Grid column-->

    <!--Grid column-->
    <div class="col-lg-4">

        <!-- Card -->
        <div class="card mb-3">
            <div class="card-body">

                <h5 class="mb-3">The total amount of</h5>

                <ul class="list-group list-group-flush">
                    <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
                        Sous total
                        <span>{{ total | number_format(2, ',', ' ') }} €</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center px-0">
                        Livraison
                        <span>Gratis</span>
                    </li>
                    <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
                        <div>
                            <strong>The total amount of</strong>
                            <strong>
                                <p class="mb-0">(including VAT)</p>
                            </strong>
                        </div>
                        <span><strong>$53.98</strong></span>
                    </li>
                </ul>

                <a href="{{ path('payment') }}" type="button" class="btn btn-primary btn-block waves-effect waves-light">go to
                    checkout
                </a>

            </div>
        </div>
        <!-- Card -->

        <!-- Card -->
        <div class="card mb-3">
            <div class="card-body">

                <a class="dark-grey-text d-flex justify-content-between" data-toggle="collapse"
                   href="#collapseExample1"
                   aria-expanded="false" aria-controls="collapseExample1">
                    Add a discount code (optional)
                    <span><i class="fas fa-chevron-down pt-1"></i></span>
                </a>

                <div class="collapse" id="collapseExample1">
                    <div class="mt-3">
                        <div class="md-form md-outline mb-0">
                            <input type="text" id="discount-code1" class="form-control font-weight-light"
                                   placeholder="Enter discount code">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Card -->

    </div>
    <!--Grid column-->

</div>
{% else %}

<p class="text-white">Votre panier est vide pour le moment</p>

{% endif %}
