{% extends 'base.html.twig' %} {% block title %} Hello RecipesController! {% endblock %} {% block body %}

<div class="container mt-5 js-filter">
    <h1 class="text-center text-white">Profil</h1>

    {% if clear %}
        <span id="clear_local"></span>
    {% endif %}
    <div class="row mb-5">
        <div class="col-md-4 border bg-white ">
            <h2 class="border text-center w-100">à propos de moi</h2>
            <div class="d-flex justify-content-center">
                <span class="text-white bg-dark btn rounded-circle btn-xl">
                    JL
                </span>
            </div>
            <h3 class="text-center">{{ app.user.firstname |capitalize }} {{ app.user.lastname |upper }}</h3>
            <h4>Adresse</h4>
            <hr>
            <span class="ms-5">{{ app.user.address1 }} {{ app.user.address2 }}, {{ app.user.zipCode }} {{
                app.user.idCity.name }}</span>
            <h4>Réalisation</h4>
            <hr>
            <span>Nombre de commande éffectuer : {{ app.user.orders|length }} </span>
        </div>
        <div class="col-md-8">

            <ul class="nav nav-pills mb-3" id="pills-tab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link text-white active" id="pills-home-tab" data-bs-toggle="pill" data-bs-target="#pills-home" type="button" role="tab" aria-controls="pills-home" aria-selected="true">Commande</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link text-white" id="pills-profile-tab" data-bs-toggle="pill" data-bs-target="#pills-profile" type="button" role="tab" aria-controls="pills-profile" aria-selected="false">Profile</button>
                </li>
            </ul>
            <div class="tab-content" id="pills-tabContent">
                <div class="tab-pane fade show bg-white active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
                    commandes</div>
                {% include "user/_form.html.twig" %}
            </div>



        </div>

    </div>
    </div {% endblock %}